{
    "extends": "@tooling/typescript/tsconfig.cjs.json",
    "compilerOptions": {
        "tsBuildInfoFile": ".cache/tsconfig.tsbuildinfo",
        "rootDir": "./src",
        "outDir": "./build-cjs",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "strictFunctionTypes": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
    "exclude": ["**/__tests__/**"]
}
