{
    "extends": "@tooling/typescript/tsconfig.json",
    "compilerOptions": {
        "outDir": "build",
        "tsBuildInfoFile": ".cache/tsconfig.tsbuildinfo",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "strictFunctionTypes": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}