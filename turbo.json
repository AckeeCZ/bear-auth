{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "cacheDir": ".cache/turbo",
    "tasks": {
        "lint": {
            "cache": true,
            "outputLogs": "full"
        },
        "//#prettier:format": {
            "cache": true,
            "outputLogs": "errors-only"
        },
        "cir-dep": {
            "cache": true,
            "outputLogs": "errors-only"
        },
        "//#test": {
            "cache": true,
            "outputLogs": "errors-only"
        },
        "//#e2e": {
            "cache": true,
            "outputLogs": "errors-only"
        },
        "build": {
            "cache": true,
            "dependsOn": ["cir-dep", "//#prettier:format", "lint", "//#test", "^build", "//#audit", "//#e2e"],
            "outputs": ["build/**"]
        },
        "//#audit": {
            "dependsOn": [],
            "cache": false
        },
        "//#pre-commit": {
            "dependsOn": [],
            "cache": true
        }
    }
}
